set nocompatible
syntax on

" local directories {{{
set backupdir=~/.vim/backups
set directory=~/.vim/swaps
set undodir=~/.vim/undo
" }}}

" set default shit {{{
set autoindent
set backspace=indent,eol,start
set cursorline
set secure
set encoding=utf-8
set esckeys
set hlsearch
set ignorecase
set incsearch
set laststatus=2
set mouse=a
set nu
set showmode
set shell=/bin/bash
set ruler
set smartcase
set report=0
set smartcase
set smarttab
set splitbelow
set splitright
set title
set ttyfast
set wildmenu
" }}}
